<div>
  <div>
    <h1><%= @cocktail.name %> </h1>
  </div>
  <div class="list lead">
      <% @cocktail.doses.each do |dose| %>
        <div><%= dose.ingredient.name %> </div>
        <div><%= dose.description %> | <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure? "}%> </div>
      <% end %>
  </div>
</div>



<%= link_to "New dose", new_cocktail_dose_path(@cocktail)%>

